
<div class="event">
  <h2><%= event.title %></h2>

  <h4><%= event.site.name unless event.site.nil? %></h4>

  <div class="time-info">
    <span class="date"><%= event.fdate %></span> <br>
    <span class="start"><%= event.fstart %></span>
    <span class="separator">&ndash;</span>
    <span class="end"><%= event.fend %></span>
  </div>
  
  <p class="state"><%= event.state.capitalize %></p>

  <div class="event_drawer">
    <% unless event.area.nil? %>
    <div class="areas">
      <strong><%= event.area.split(',').count > 1 ? "Areas" : "Area" %></strong>
      <%= event.area %>
    </div>
    <% end %>
    
    <div class="needs">
      <strong>Needs</strong>
      <% if event.needs.any? %>
        <%= event.needs.collect(&:name).join(', ') %>
      <% else %>
        No needs requested.
      <% end %>
    </div>
    
    <% unless event.note.nil? %>
    <div class="notes">
      <strong>Notes</strong>
      <div class="body">
        <%= simple_format(event.note)%>
      </div>
    </div>
    <% end %>
    
    <div class="event_bottom">
      
      <% unless event.requester.nil? %>
      <div class="requester">
        <%= link_to event.requester, "mailto:#{event.requester_email}" %>
      </div>
      <% end %>
      <div class="edit_event">
        <%= link_to 'Edit', edit_event_path(event) %>
      </div>
      <div class="deny_event">
        <%= link_to 'Deny', edit_denial_for_event_path(event) %>
      </div>
      <div class="approve_event">
        <%= link_to 'Approve', approve_event_path(event), :method => :put %>
      </div>
      
    </div><!-- /.event_bottom -->
    
  </div><!-- /.event_drawer -->
  
</div><!-- /.event -->